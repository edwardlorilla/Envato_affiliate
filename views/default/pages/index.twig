{% set pageTitle = page.title %}
{% set pageDescription = page.meta_description %}

{% extends "layouts/default.twig" %}

{% block content %}
{% include 'elements/navbar.twig' %}
<div class="container">
	<div class="row">
		<div class="col-md-7 col-sm-7">
		<div class="well">
			<div class="row">
				<div class="col-md-12">
					<h3 class="center-block">
						{{ page.title|e }}
					</h3>
					<hr />
				</div>
				<div class="col-md-12">
					{{ page.content|raw }}
				</div>
			</div>
		</div>
		</div>
		<div class="col-sm-3">
			{% include 'elements/sidebar.twig' %}
		</div>
	</div>
</div>
<!-- /container -->
{% endblock %}
