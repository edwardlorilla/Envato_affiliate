{% set pageTitle = 'Import categories' %}
{% extends "layouts/admin.twig" %}

{% block content %}
{% include 'elements/admin_navbar.twig' %}
<div class="admin_container" style="margin-top:5%">
	<div class="col-md-3">
		{% include 'elements/admin_sidebar.twig' %}
	</div>
	<div class="col-md-15">

		<form method="post" action="{{ siteUrl('/admin/categories/import') }}" role="form" accept-charset="UTF-8">
			<div class="row">
				<div class="col-md-15 form-group">
					<label>Market name</label>
					{% spaceless %}
					<select class="form-control" name="category_id" data-live-search="true">
						{% for category in categories %}
							<option value="{{ category.id }}">
								{{ category.name | replace({'->':"- - "}) }}
							</option>
						{% endfor %}
					</select>
					{% endspaceless %}
					<p class="help-block">Select market name to import categories.</p>
				</div>
				<div class="col-md-15 form-group">
					<button type="submit" class="btn btn-primary">Submit</button>
					<a href="{{ siteUrl('/admin/categories') }}" class="btn btn-warning">Cancel</a>
				</div>
			</div>
		</form>

	</div>
</div>
<!-- /container -->
{% endblock %}
