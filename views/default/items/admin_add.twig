{% set pageTitle = 'Add item' %}
{% extends "layouts/admin.twig" %}

{% block content %}
{% include 'elements/admin_navbar.twig' %}
<div class="admin_container" style="margin-top:5%">
	<div class="col-md-3">
		{% include 'elements/admin_sidebar.twig' %}
	</div>
	<div class="col-md-15">

		<form method="post" action="{{ siteUrl('/admin/items/add') }}" id="form" role="form" accept-charset="UTF-8">
			<div class="row">
				<div class="form-group">
					<label>Item URLs</label>
					<textarea class="form-control" rows="10" id="urls" name="urls" placeholder="Enter One Product URL Per Line"></textarea>
				</div>
				<div class="form-group">
					<label>Category</label>
					{% spaceless %}
					<select class="form-control" name="category_id" data-live-search="true">
						{% for category in categories %}
							<option class="depth-{{ category.depth }}" value="{{ category.id }}"{% if category.category_id == 0 %} disabled="disabled"{% endif %}>
								{{ category.name | replace({'->':"- "}) }}
							</option>
						{% endfor %}
					</select>
					{% endspaceless %}
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
				<a href="{{ siteUrl('/admin/items') }}" class="btn btn-warning">Cancel</a>
			</div>
		</form>

	</div>
</div>
<!-- /container -->
{% endblock %}
