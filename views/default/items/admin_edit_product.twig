{% set pageTitle = 'Edit your product' %}
{% extends "layouts/admin.twig" %}

{% block content %}
    {% include 'elements/admin_navbar.twig' %}
    <div class="admin_container" style="margin-top:5%">
        <div class="col-md-3">
            {% include 'elements/admin_sidebar.twig' %}
        </div>
        <div class="col-md-7">

<script type="text/javascript">
tinymce.init({
    selector: '#content',
    plugins: 'link image code',
    relative_urls: false
});
</script>
            <form method="post" action="{{ siteUrl('/admin/items/edit/' ~ item.id) }}" id="form" role="form" accept-charset="UTF-8" enctype="multipart/form-data">
                <div class="row">
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" class="form-control" id="title" name="title" value="{{ item.title|trim }}">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea name="description" id="content" class="form-control" rows="10">{{ item.description|trim }}</textarea>
                    </div>
                    <div class="form-group">
                        <label>Preview Image</label>
                        <input type="file" class="form-control" id="image" name="image" value="">
                    </div>
                    <div class="form-group">
                        <label>Thumbnail Image</label>
                        <input type="file" class="form-control" id="thumbnail" name="thumbnail" value="">
                    </div>
                    <div class="form-group">
                        <label>Price</label>
                        <input type="text" class="form-control" id="price" name="price" value="{{ item.price|trim }}">
                    </div>
                    <div class="form-group">
                        <label>Category</label>
                        {% spaceless %}
                            <select class="form-control" name="category_id" data-live-search="true">
                                {% for category in categories %}
                                    <option class="depth-{{ category.depth }}" value="{{ category.id }}"{% if category.category_id == 0 %} disabled="disabled"{% endif %}{% if category.id == item.category_id %} selected="selected"{% endif %}>
                                        {{ category.name | replace({'->':"&rarr;&nbsp;"}) | raw }}
                                    </option>
                                {% endfor %}
                            </select>
                        {% endspaceless %}
                    </div>
                    <div class="form-group">
                        <label>Success URL</label>
                        <input type="text" class="form-control" id="success_url" name="success_url" value="{{ item.success_url|trim }}">
                    </div>
                    <div class="form-group">
                        <label>Cancel URL</label>
                        <input type="text" class="form-control" id="cancel_url" name="cancel_url" value="{{ item.cancel_url|trim }}">
                    </div>
                    <div class="form-group">
                        <label>Download File</label>
                        <input type="text" class="form-control" id="download_file" name="download_file" value="{{ item.download_file|trim }}">
                    </div>
                    <div class="form-group">
                        <label>Buy Now Button HTML Code</label>
                        <textarea class="form-control" value="" name="buy_now" id="buy_now" rows="5">{{ item.buy_now|trim }}</textarea>
                    </div>
                    <div class="form-group">
                        <label>Demo Link</label>
                        <input type="text" class="form-control" id="demo" name="demo" value="{{ item.demo|trim }}">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a href="{{ siteUrl('/admin/items') }}" class="btn btn-warning">Cancel</a>
                </div>
            </form>

        </div>
    </div>
    <!-- /container -->
{% endblock %}
